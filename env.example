# Poietic Generator LLM Agents - Environment Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to Git! (it contains API keys)

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Cloud LLM API Keys (Optional)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
MISTRAL_API_KEY=

# Server Configuration
AI_PROXY_PORT=8003
POIETIC_SERVER_URL=http://localhost:3001

# Agent Behavior
DEFAULT_INTERVAL=0
MAX_PIXELS_PER_ITERATION=25

# Logging
LOG_LEVEL=INFO
ENABLE_ANALYTICS=true
